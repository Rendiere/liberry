generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Artist {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  albums  Album[]
  songs   Song[]
}

model Album {
  id        Int     @id @default(autoincrement())
  title     String
  artist    Artist  @relation(fields: [artistId], references: [id])
  artistId  Int
  songs     Song[]
  releaseAt DateTime?
}

model Song {
  id        Int     @id @default(autoincrement())
  title     String
  artist    Artist  @relation(fields: [artistId], references: [id])
  artistId  Int
  album     Album?  @relation(fields: [albumId], references: [id])
  albumId   Int?
  duration  Int     // Duration in seconds
  year      Int
  filePath  String  @unique
}